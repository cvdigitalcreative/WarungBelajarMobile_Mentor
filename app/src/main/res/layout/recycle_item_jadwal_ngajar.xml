<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_jadwal_ngajar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    card_view:cardBackgroundColor="#eff4f4"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_namaKursus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nama Kursus"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_jenisKursus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Jenis Kursus"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batch"
            android:textColor="@color/QRCodeBlackColor"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hari1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari1"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_jam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Jam1"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hari2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari2"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_jam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Jam2"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>